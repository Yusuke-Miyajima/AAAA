<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="nav navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span style="color: white">Bookers</span>
        </nav>
        <% if user_signed_in? %>
        <nav class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "Home", user_path(current_user.id), class:"glyphicon glyphicon-home home"%>
          </li>
          <li>
            <%= link_to "Users", users_path, class:"glyphicon glyphicon-user users"%>
          </li>
          <li>
            <%= link_to "Books", books_path, class:"glyphicon glyphicon-book books"%>
          </li>
          <li>
            <%= link_to "logout", destroy_user_session_path, method: :delete, notice: "Signed out successfuly", class:"glyphicon glyphicon-log-out logout"%>
          </li>
        </nav>
        <% else %>
        <nav class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "Home", root_path, class:"glyphicon glyphicon-home home"%>
          </li>
          <li>
            <%= link_to "About", home_about_path, class:"glyphicon glyphicon-link about"%>
          </li>
          <li>
            <%= link_to "sign up", new_user_registration_path, class:"glyphicon glyphicon-edit sign-up"%>
          </li>
          <li>
            <%= link_to " login", new_user_session_path, class:"glyphicon glyphicon-log-in sign_in"%>
          </li>
        </nav>
        <% end %>
      </div>
    </div>
    <div>
    <%= yield %>
    </div>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p class="text-right">CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
