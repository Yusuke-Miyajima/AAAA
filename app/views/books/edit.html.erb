<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<% if @book.errors.any? %>
				<p>error.</p>
				<% @book.errors.full_messages.each do |message| %>
          			<%= message %>
          		<% end %>
			<% end %>
			<%= form_for(@book) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title, :class => "form-control" %>

			<h4>Opinion</h4>
			<%= f.text_area :body, :class => "form-control" %>

			<%= f.submit 'Update Book', class:"btn btn-primary btn-block", notice: "You have created book successfully." %>
			<% end %>

			<%= link_to 'Edit', edit_book_path(@book) %> |
			<%= link_to 'Back', books_path %>
			<div class="col-md-3"></div>
		</div>
	</div>
</div>