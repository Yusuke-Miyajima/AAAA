<div class="body">
	<div class="container">
		<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
		<% end %>
		<div class="row">
			<%= render  'books/list', book: @book_new, user: @book.user %>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table">
					<tbody>
						<tr>
							<td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br><%= link_to "#{@book.user.name}", user_path(@book.user) %></td>
							<td><%= link_to "#{@book.title}", book_path(@book) %></td>
							<td><%= @book.body %></td>
							<% if @book.user == current_user %>
							<td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success" %></td>
							<td><%= link_to "Destroy", book_path, class: "btn btn-danger", method: :delete, "data-comfirm" => "Are you sure?" %></td>
							<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>