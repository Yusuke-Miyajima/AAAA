<h2>User info</h2>
<% if @user.errors.any? %>
	<p>error.</p>
	<% @user.errors.full_messages.each do |message| %>
	<%= message %>
	<% end %>
<% end %>
<%= form_for(@user) do |f| %>

	<div class="field">
		<%= f.label :name %><br />
	    <%= f.text_field :name, autofocus: true %>
	</div>

	<div class="form-group has-icon">
		<%= f.label :image %>
	    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>

 	<div class="field">
 	   <%= f.label :introduction %><br />
	    <%= f.text_area :introduction, autofocus: true %>
	</div>

	<div class="actions">
	    <%= f.submit "Update" %>
	</div>
<% end %>